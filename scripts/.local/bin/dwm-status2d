#!/usr/bin/env dash
# vim: ft=sh

interval=1
rxs=0
txs=0

pulseaudio() {
VOL=$(pamixer --get-volume-human | tr -d '%')
printf "%s" "$SEP1"
    if [ "$VOL" = "muted" ] || [ "$VOL" -eq 0 ]; then
        printf "^c#cc241d^ðŸ”‡^d^"
    elif [ "$VOL" -gt 0 ] && [ "$VOL" -le 33 ]; then
        printf "^c#cc241d^ðŸ”ˆ %s%%^d^" "$VOL"
    elif [ "$VOL" -gt 33 ] && [ "$VOL" -le 66 ]; then
        printf "^c#d79921^ðŸ”‰ %s%%^d^" "$VOL"
    elif [ "$VOL" -gt 66 ] && [ "$VOL" -le 100 ]; then
        printf "^c#b8bb26^ðŸ”Š %s%%^d^" "$VOL"
    else
        printf "^c#cc241d^ðŸ”Š %s%%^d^" "$VOL"
    fi
}
alsa() {
VOL=$(amixer get -c 2 Headphone | tail -n1 | sed -r "s/.*\[(.*)%\].*/\1/")
printf "%s" "$SEP1"
    if [ "$VOL" -eq 0 ]; then
        printf "^c#cc241d^ðŸ”‡^d^"
    elif [ "$VOL" -gt 0 ] && [ "$VOL" -le 33 ]; then
        printf "^c#cc241d^ðŸ”ˆ %s%%^d^" "$VOL"
    elif [ "$VOL" -gt 33 ] && [ "$VOL" -le 66 ]; then
        printf "^c#d79921^ðŸ”‰ %s%%^d^" "$VOL"
    else
        printf "^c#b8bb26^ðŸ”Š %s%%^d^" "$VOL"
    fi
}
ups() {
CHARGE=$(apcaccess -p BCHARGE -u)
STATUS=$(apcaccess -p STATUS -u)
TIMELEFT=$(apcaccess -p TIMELEFT -u)

printf "%s" "$SEP1"
    if [ "$STATUS" = "ONLINE " ]; then
        printf "^c#b8bb26^ðŸ”Œ %s%% %s%sMin^d^" "$CHARGE" "$STATUS" "$TIMELEFT"
    elif [ "$STATUS" = "TRIM ONLINE " ]; then
        printf "^c#d79921^ðŸ”Œ %s%% %s%sMin^d^" "$CHARGE" "$STATUS" "$TIMELEFT"
    elif [ "$STATUS" = "ONBATT " ]; then
        printf "^c#cc241d^ðŸ”‹ %s%% %s%sMin^d^" "$CHARGE" "$STATUS" "$TIMELEFT"
    else
        printf "ðŸ”‹ %s%% %s %sMins" "$CHARGE" "$STATUS" "$TIMELEFT"
    fi
}
network() {
CONNAME=$(nmcli -a | grep 'Wired connection' | awk 'NR==1{print $1}')
if [ "$CONNAME" = "" ]; then
    CONNAME=$(nmcli -t -f active,ssid dev wifi | grep '^yes' | cut -c 5-)
fi
PRIVATE=$(nmcli -a | grep 'inet4 192' | awk '{print $2}' | tr "\\n" " " )
PUBLIC=$(curl -s https://ipinfo.io/ip)

printf "%s" "$SEP1"
printf "ðŸŒ %s (%s^c#928374^:^d^^c#fb4934^%s^d^)" "^c#d3869b^$CONNAME^d^" "$PRIVATE" "$PUBLIC"
}

# for weather
LOCATION='Chandigarh'
while true; do
    curl -s "https://wttr.in/${LOCATION}?format=1" > $HOME/.cache/Weather.tmp
    sleep 300
done &

while true; do
    # Network Interface Name
    interface=$(ip route get 8.8.8.8 2>/dev/null| awk '{print $5}')

    # Time
    LOCALTIME=$(date +%a\ %d\ %b\ %H:%M)

    # CPU
    CPU_T=$(cat /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input)
    CPU_TEMP=$(expr "$CPU_T" / 1000)
    CPU_F=$(cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_cur_freq)
    CPU_FREQ=$(expr "$CPU_F" / 1000)

    # GPU
    GPU_TEMP=$(nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits)

    # Weather
    WEATHER=$(cat $HOME/.cache/Weather.tmp)

    # Used and total memory
    MEMUSED=$(free -h | awk '(NR == 2) {print $3}')
    MEMTOT=$(free -h |awk '(NR == 2) {print $2}')

    # Used and total storage in / and /home (rounded to 1024B)
    ROOTUSED=$(df -h | grep '/$' | awk '{print $3}' | tr "\\n" " ")
    ROOTTOT=$(df -h | grep '/$' | awk '{print $2}' | tr "\\n" " ")
    HOMEUSED=$(df -h | grep '/home$' | awk '{print $3}' | tr "\\n" " ")
    HOMETOT=$(df -h | grep '/home$' | awk '{print $2}' | tr "\\n" " ")

    # STATUS
    xsetroot -name " ^c#b8bb26^â–¼ ${rxs}KiB/s â–² ${txs}KiB/s^d^ $(network) ^c#928374^|^d^ $(pulseaudio) ^c#928374^|^d^ $WEATHER ^c#928374^|^d^ ï€•: ${HOMEUSED}/${HOMETOT} ^c#928374^|^d^ /: ${ROOTUSED}/${ROOTTOT} ^c#928374^|^d^ RAM ${MEMUSED}/${MEMTOT} ^c#928374^|^d^ ^c#b8bb26^GPU ${GPU_TEMP}Â°C^d^ ^c#928374^|^d^ ^c#fabd2f^ï‹› ${CPU_FREQ}Mhz ${CPU_TEMP}Â°C^d^ ^c#928374^|^d^ $(ups) ^c#928374^|^d^ $LOCALTIME "

    rx1=$(cat /sys/class/net/$interface/statistics/rx_bytes)
    tx1=$(cat /sys/class/net/$interface/statistics/tx_bytes)

    sleep $interval

    rx2=$(cat /sys/class/net/$interface/statistics/rx_bytes)
    tx2=$(cat /sys/class/net/$interface/statistics/tx_bytes)
    rxs=$(expr $rx2 - $rx1)
    txs=$(expr $tx2 - $tx1)
    rxs=$(expr $rxs / $interval)
    txs=$(expr $txs / $interval)
    rxs=$(expr $rxs / 1024)
    txs=$(expr $txs / 1024)
done &
